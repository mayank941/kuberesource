# HELP monthly_cost_total The total monthly cost for the cluster
{% for cluster_id, summary in cluster_summaries.items() %}
monthly_cost_total{clusterName="{{ summary.cluster.name }}",workerNodeCount="{{summary.worker_nodes}}",masterNodeCount="{{summary.master_nodes}}",podCount="{{summary.pods|count}}"} {{ summary.cost|money }} {{ now|unix_timestamp }}
{% endfor %}

# HELP monthly_slack_total The total monthly slack for the cluster
{% for cluster_id, summary in cluster_summaries.items() %}
monthly_slack_total{clusterName="{{ summary.cluster.name }}",workerNodeCount="{{summary.worker_nodes}}",masterNodeCount="{{summary.master_nodes}}",podCount="{{summary.pods|count}}"} {{ summary.slack_cost|money }} {{ now|unix_timestamp }}
{% endfor %}

# HELP monthly_node_cost The monthly cost of each node
{% for node_id, node in nodes.items()|sort: %}
monthly_node_cost{clusterName="{{ node.cluster_name }}",nodeName="{{ node.node_name }}",instanceType="{{ node.instance_type }}",spotInstance="{{ node.spot }}",onDemandInstance="{{ node.spot == false }}"} {{ node.cost|money }} {{ now|unix_timestamp }}
{% endfor %}

